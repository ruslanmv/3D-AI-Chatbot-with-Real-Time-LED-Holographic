# Holographic Chatbot Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# OpenAI Configuration
# ============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-api-key-here

# OpenAI model to use (gpt-4, gpt-3.5-turbo, etc.)
OPENAI_MODEL=gpt-4

# Maximum tokens for ChatGPT responses (10-4096)
OPENAI_MAX_TOKENS=150

# Temperature for response generation (0.0-1.0, higher = more creative)
OPENAI_TEMPERATURE=0.7

# ============================================================================
# Holographic Fan Configuration
# ============================================================================
# Base URL for your holographic LED fan API
# Example: http://192.168.1.100 (replace with your fan's IP address)
FAN_API_URL=http://192.168.1.100

# Endpoint path for frame uploads
FAN_UPLOAD_ENDPOINT=/upload_frame

# Target frame rate for animations (1-60 fps)
FAN_FRAME_RATE=30

# Frame resolution (width in pixels)
FAN_RESOLUTION_WIDTH=256

# Frame resolution (height in pixels)
FAN_RESOLUTION_HEIGHT=256

# ============================================================================
# 3D Model Configuration
# ============================================================================
# Path to your 3D model file (glTF/GLB/VRM)
# Leave empty if not using a 3D model
# MODEL_PATH=models/character.glb

# ============================================================================
# Output Directories
# ============================================================================
# Directory for generated audio files
AUDIO_OUTPUT_DIR=output/audio

# Directory for generated animation frames
FRAME_OUTPUT_DIR=output/frames

# ============================================================================
# Logging Configuration
# ============================================================================
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================================================
# Feature Flags
# ============================================================================
# Enable/disable audio synthesis (true/false)
ENABLE_AUDIO=true

# Enable/disable lip synchronization (true/false)
ENABLE_LIP_SYNC=true

# Enable/disable streaming to holographic fan (true/false)
ENABLE_FAN_STREAMING=true
